<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:context="com.yqmac.it.main.Login2Activity"
        >
    <ImageView
            android:id="@+id/logo_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/logo"
            android:layout_centerHorizontal="true"/>

    <LinearLayout
            android:id="@+id/edt_li"
            android:layout_below="@id/logo_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ground_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
            <EditText
                    android:id="@+id/login2_et_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@null"
                    android:hint="用户名"
                    android:textColorHint="#CFCBC6"
                    android:layout_marginRight="40dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"/>
        </RelativeLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
            <EditText
                    android:id="@+id/login2_et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@null"
                    android:hint="密码"
                    android:textColorHint="#CFCBC6"
                    android:inputType="textPassword"
                    android:layout_marginRight="40dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pass"
                    android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/forget_pw_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="#CFCBC6"
            android:layout_marginTop="10dp"
            android:layout_below="@id/edt_li"/>
    <!-- android:text 忘记密码？ -->

    <Button
            android:id="@+id/login2_btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_shape"
            android:layout_marginTop="20dp"
            android:text="登录"
            android:textColor="@color/white"
            android:layout_below="@id/forget_pw_tv"/>

</RelativeLayout>
